{
    "name": "gitbook-plugin-sharing",
    "description": "Sharing buttons in GitBooks website",
    "main": "index.js",
    "version": "1.0.1",
    "dependencies": {
        "lodash": "^3.10.1"
    },
    "engines": {
        "gitbook": ">=2.4.0"
    },
    "homepage": "https://github.com/GitbookIO/plugin-sharing",
    "repository": {
        "type": "git",
        "url": "https://github.com/GitbookIO/plugin-sharing.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/GitbookIO/plugin-sharing/issues"
    },
    "gitbook": {
        "properties": {
            "facebook": {
                "type": "boolean",
                "default": true,
                "title": "Facebook"
            },
            "twitter": {
                "type": "boolean",
                "default": true,
                "title": "Twitter"
            },
            "google": {
                "type": "boolean",
                "default": false,
                "title": "Google"
            },
            "weibo": {
                "type": "boolean",
                "default": false,
                "description": "Weibo"
            },
            "instapaper": {
                "type": "boolean",
                "default": false,
                "description": "Instapaper"
            },
            "vk": {
                "type": "boolean",
                "default": false,
                "description": "VK"
            },
            "all": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "default": ["facebook", "google", "twitter", "weibo", "instapaper"],
                "uniqueItems": true
            }
        }
    }
}
